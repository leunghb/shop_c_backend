<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.demo.mapper.UserMapper">
    <select id="getAllUser" resultType="User">
        select account,createdAt from user;
    </select>

    <select id="getUserByAccount" resultType="User">
        select account,createdAt from user where account = #{account};
    </select>

    <insert id="addUser" parameterType="User">
        insert into user(account,password) values(#{account},#{password})
    </insert>
</mapper>